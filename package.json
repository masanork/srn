{
  "name": "srn",
  "version": "1.0.0",
  "description": "srn (Short for Sorane) is a Static Site Generator designed for precision and performance in typography.",
  "main": "index.js",
  "engines": {
    "bun": ">= 1.0.0"
  },
  "scripts": {
    "build": "bun run build:blog && bun run build:srn",
    "build:blog": "bun run src/index.ts --site my-blog",
    "build:srn": "bun run src/index.ts --site srn",
    "build:full": "bun run src/index.ts --site my-blog --clean && bun run src/index.ts --site srn --clean",
    "dev": "bun --watch src/index.ts",
    "deploy": "bun run deploy:blog && bun run deploy:srn",
    "deploy:blog": "gh-pages -d dist/my-blog -r https://github.com/masanork/masanork.github.io.git -b main",
    "deploy:srn": "gh-pages -d dist/srn",
    "grid": "bun run src/generate-grid.ts",
    "db:build": "bun run src/build-db.ts",
    "catalog": "bun run src/generate-catalog.ts",
    "inspect": "bun run src/inspect-html.ts",
    "migrate": "bun run src/migrate.ts",
    "rescue:images": "bun run src/rescue-images.ts",
    "verify": "bun run src/bin/weba-verify.ts",
    "mcp": "bun run src/mcp-server.ts",
    "test": "bun test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masanork/srn.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/masanork/srn/issues"
  },
  "homepage": "https://github.com/masanork/srn#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@noble/post-quantum": "^0.5.2",
    "canonicalize": "^2.1.0",
    "cbor-x": "^1.6.0",
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "fast-csv": "^5.0.5",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1",
    "opentype.js": "^1.3.4",
    "wawoff2": "^2.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@types/node": "^25.0.3",
    "@types/opentype.js": "^1.3.8",
    "bun-types": "^1.3.5",
    "gh-pages": "^6.3.0",
    "typescript": "^5.9.3"
  }
}
